@inherits LayoutComponentBase
@layout MainLayout
@inject IAssetTypesService AssetTypesService
<MudGrid>
    <MudItem md="3">
        <MudPaper Class="pa-2">
            <MudStack Spacing="4">
                <MudStack Row="true">
                    <MudTextField @bind-Value="@_normalText" Label="Search" Margin="Margin.Dense" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" />
                    <SectionOutlet SectionName="new-button" />
                </MudStack>
                <MudDivider />
                <MudNavMenu Style="overflow: auto; height: 72vh" Bordered="true">
                    @if (AssetTypesService.MenuItems == null)
                    {
                        <MudSkeleton Animation="Animation.Wave" />
                        <MudSkeleton Animation="Animation.Wave" />
                        <MudSkeleton Animation="Animation.Wave" />
                    }
                    else
                    {
                       <SectionOutlet SectionName="menu-items" />
                    }
                </MudNavMenu>
            </MudStack>
        </MudPaper>
    </MudItem>
    <MudItem md="9">
        <MudPaper Class="pa-3">
            @Body
        </MudPaper>
    </MudItem>
</MudGrid>







@code {
    string _normalText = "";
}