@switch (Status)
{
    case "Available":
        <MudChip Size="Size.Small" Style="background-color: #55CD97; font-weight: 500; color: white">Available</MudChip>
        break;
    case "Taken":
        <MudChip Size="Size.Small" Style="background-color: #1CA1C1; font-weight: 500; color: white">Taken</MudChip>
        break;
    case "Broken":
        <MudChip Size="Size.Small"  Style="background-color: #FF5C4C; font-weight: 500; color: white">Broken</MudChip>
        break;
    case "Deprecated":
        <MudChip Size="Size.Small" Style="background-color: #94A1B3; font-weight: 500; color: white">Deprecated</MudChip>
        break;
}

@code {
    
    [Parameter]
    public string Status { get; set; } = null!;
    
}